package {import flash.utils.Timer;import flash.text.TextField;import flash.events.TimerEvent;public class NormalTimer {	private var _delay:int = 0;	private var _repeatCount:int = 0;	private var _timer:Timer = null;	private var _tf:TextField = null;	private var _totalms:Number = 0;	private var _milsecs:int = 0;	private var _seconds:int = 0;	private var _minutes:int = 0;	private var _hours:Number = 0;	// updateDelayMilSec : delay between subsequent calls	// totalTimeMilSec : total duration for which timer is alive	public function NormalTimer(updateDelayMilSec:Number = 0,															totalTimeMilSec:Number = 0) : void {		_delay = updateDelayMilSec;		_totalms = totalTimeMilSec;		if (_delay == 0) {			_repeatCount = _totalms;		} else {			_repeatCount = _totalms / _delay;		}		if (_repeatCount == 0) {			_timer = new Timer(_delay);		} else {			_timer =  new Timer(_delay, _repeatCount);		}		_timer.addEventListener(TimerEvent.TIMER, _OnTimerFired);	}	public function Start(tf:TextField) : void {		_tf = tf;		_timer.start();	}	private function _Update() : void {		var str:String = "";		str += _FormatTime(_hours);		str += ":";		str += _FormatTime(_minutes);		str += ":";		str += _FormatTime(_seconds);		str += ":";		str += _FormatMSec(_milsecs);		_tf.text = str;	}	private function _FormatMSec(msec:Number) : String {		var str:String = msec.toString();		if (msec > 99) {			return str;		} else if (msec > 9) {			return "0" + str;		} else {			return "00" + str;		}	}	private function _FormatTime(t:Number) : String {		var str:String = t.toString();		if (t > 9) {			return str;		} else {			return "0" + str;		}	}	private function _OnTimerFired(e:TimerEvent) : void {		_totalms -= _timer.delay;		_seconds = _totalms / 1000;		_milsecs = _totalms % 1000;		_minutes = _seconds / 60;		_seconds = _seconds % 60;		_hours = _minutes / 24;		_minutes = _minutes % 24;		_Update();	}}}