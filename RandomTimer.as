package {	import flash.text.TextField;	import flash.utils.Timer;	import flash.events.TimerEvent;public class RandomTimer {	private var _minMSec:int = 0;	private var _maxMSec:int = 0;	private var _timer:Timer = null;	private var _tf:TextField = null;	public function RandomTimer(minMSec:int, maxMSec:int) : void {		_minMSec = minMSec;		_maxMSec = maxMSec;	}		public function Start(tf:TextField) : void {		_tf = tf;		_CreateTimer();		_timer.start();	}	private function _CreateTimer() : void {		_timer = new Timer(_CalculateNextFireTime());		_timer.addEventListener(TimerEvent.TIMER, _OnTimerFire);			}	private function _CalculateNextFireTime() : int {		return Math.random() * (_maxMSec - _minMSec) + _minMSec;	}		private function _OnTimerFire(e:TimerEvent) : void {		_tf.text = "Called in : " + _timer.delay + " ms";		_CreateTimer();	}}}